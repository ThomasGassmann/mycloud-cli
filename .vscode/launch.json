{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Terminal",
            "type": "python",
            "request": "launch",
            "pythonPath": "${workspaceRoot}/.venv/bin/python",
            "module": "mycloud ${input:args}",
            "stopOnEntry": true,
            "console": "integratedTerminal",
            "args": [
                "${input:args}"
            ],
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "args",
            "type": "promptString",
            "description": "Command line args for debugging"
        }
    ]
}